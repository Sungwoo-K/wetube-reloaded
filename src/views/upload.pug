extends layout.pug

block goHome
    li
        a(href="/") Home
block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title",placeholder="Title", required, type="text", maxLength="80")
        input(name="description",placeholder="Discription", required, type="text", minLength="20")
        input(name="hashtags",placeholder="Hashtags, separated by comma", required, type="text")
        input(type="submit", value="Upload Video")