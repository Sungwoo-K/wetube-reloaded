header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            block goHome
            block search
                li
                    a(href="/search")
                        i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video 
                li
                    a(href="/users/edit") Edit Profile
                li
                    a(href="/users/logout") Log Out
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatar_url === ""
                            span X
                        else
                            img.header__avatar(src="/" + loggedInUser.avatar_url)
                
            else
                block join
                    li 
                        a(href="/join") Join
                block login
                    li 
                        a(href="/login") Login
        